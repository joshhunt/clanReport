.root

  section
    margin-bottom: 50px

  h3
    margin-bottom: 0

.table
  font-size: 14px
  border-collapse: collapse;
  width: 100%

  thead
    font-weight: bold

  tbody tr:hover td
    background: #f2f2f2

  td
    border-bottom: 1px solid #dedede;
    padding: 5px
    transition: all 50ms ease-in-out

.nightfallSummary
  font-size: 13px;

  td
    padding: 1px 0
    border: none

  td + td
    padding-left: 4px

.grey
  opacity: .75

.nightfallLink
  color: inherit
  text-decoration: none

.addPlayerModal
  width: 500px
  max-width: 100%
  background: white
  border-radius: 2px
  padding: 15px
