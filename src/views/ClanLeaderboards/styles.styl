.leaderboards
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  transition: all 150ms ease-in-out

  &.loading
    opacity: .5
    pointer-events: none

.modalPlayerList
  width: 400px
  max-width: 95%

.modeOpt
  display: inline-block
  color: inherit
  padding-left: 8px

  & + &
    border-left: 1px solid rgb(165, 165, 165)
    border-right: 1px solid transparent
    margin-left: 8px
    padding-left: 8px
