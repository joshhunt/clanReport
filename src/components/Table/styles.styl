@import '../../lib/toolbox.styl'

.table
  font-size: 0.9375em
  border-collapse: collapse
  white-space: nowrap
  width: 100%
  margin-bottom: 50px

  thead
    font-weight: bold

    td
      cursor: pointer

  tfoot
    font-weight: bold

  td
    padding: 10px 15px
    border-bottom: 1px solid #E1E1E1

    +darkMode()
      border-bottom-color: $dm-border-color;

.tableScrollWrapper
  max-width: 100%
  overflow: auto
