@import '../../lib/toolbox.styl'

.root
  display: block
  color: inherit
  text-decoration: none
  padding: 8px 10px
  margin-top: 4px
  transition: 150ms ease-in-out
  background: lighten(#ececec, 60%)

  &:hover
    background: lighten(#ececec, 10%)

  +darkMode()
    background: $dm-background-alt;

    &:hover
      background: lighten($dm-background, 7%)

.platformIcon
  margin-right: 5px
