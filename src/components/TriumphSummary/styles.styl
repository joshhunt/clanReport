@import '../../lib/toolbox.styl'

.recordSummary
  display: flex

.recordAccessory
  margin-right: 5px

.recordMain
  flex: 1

_padding = 3px
.iconWrapper
  float: left
  background: #464646
  border-radius: _padding
  margin-right: 10px
  padding: _padding
  transition: all 200ms ease-in-out

  +darkMode()
    background: transparent
    padding: 0

.icon
  _size = 30px
  height: _size
  width: auto
  display: block
  transition: all 200ms ease-in-out

  +darkMode()
    height: (_size + (_padding * 2))
    border-radius: _padding

.link
  color: inherit
  text-decoration: none
  font-size: 14px

  &:hover
    text-decoration: underline

.desc
  display: block
  max-width: 400px
  white-space: initial
  opacity: .75

  @media screen and (max-width: 1000px)
    display: none

.points
  display: inline-block
  margin-left: 5px
